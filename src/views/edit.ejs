<%- include('partials/_header') %>

<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/edit/<%= task._id %>" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="firstName" placeholder="Title" value="<%= task.firstName %>">
            </div>
           <div class="form-group">
              <input class="form-control" type="text" name="lastName" placeholder="Title" value="<%= task.lastName %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="email" placeholder="Title" value="<%= task.email %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="phone" placeholder="Title" value="<%= task.phone %>">
            </div>
            <button class="btn btn-primary" type="submit">
              Update 
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include ('partials/_footer') %>